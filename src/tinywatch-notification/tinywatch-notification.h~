#ifndef _TINYWATCH_NOTIFICATIONS_H_
#define _TINYWATCH_NOTIFICATIONS_H_

#ifndef _ARDUINO_H_
#include <Arduino.h>
#endif

#ifndef _TINYSCREEN_H_
#include <TinyScreen.h>
#endif

#ifndef _BLE_PERIPHERAL_H_
#include <BLEPeripheral.h>
#endif

namespace TinyWatchNotifications{
  //Returns a const char* that represents
  //the current notification.
  const char* getNotificationToRender(time_t t);

  //Setup for notifications plugin.
  void setup();
    
  //BLE poll for notificationCharacteristic value change.
  void poll();

  //Render notification using display.
  void drawNotification(TinyScreen display);
}

#endif
