<?xml version='1.0' encoding='utf-8'?>
<widget id="cbolgiano.tinywatch" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="BLE">
        <param name="android-package" value="com.evothings.BLE" />
    </feature>
    <name>tinywatch</name>
    <description>
        A mobile application that will expose data using BLE for the tinywatch to consume.
    </description>
    <author email="cbolgiano625@gmail.com " href="" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/mipmap-ldpi/ldpi.png" />
    <icon density="mdpi" src="/res/mipmap-mdpi/mdpi.png" />
    <icon density="hdpi" src="/res/mipmap-hdpi/hdpi.png" />
    <icon density="xhdpi" src="/res/mipmap-xhdpi/xhdpi.png" />
    <icon density="xxhdpi" src="/res/mipmap-xxhdpi/xxhdpi.png" />
    <icon density="xxxhdpi" src="/res/mipmap-xxxhdpi/xxxhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
